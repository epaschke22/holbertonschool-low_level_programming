CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
DEPS = m.h

.PHONEY: all
all: $(OBJ) $(SRC) $(DEPS)
	$(CC) $(OBJ) -o $(NAME)

.PHONEY: clean
clean:
	${RM} *~ $(NAME)

.PHONEY: oclean
oclean:
	$(RM) $(OBJ)

.PHONEY: fclean
fclean: clean oclean

.PHONEY: re
re: oclean all
